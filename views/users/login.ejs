<% layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" novalidate action="/login" method="POST">
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" type="text" id="username" required class="form-control">        
                <div class="invalid-feedback">Invalid Username!</div>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" type="password" id="password" required class="form-control">        
                <div class="invalid-feedback">Invalid Password!</div>
            </div>
            <button class="btn btn-dark edit-btn">Login</button>
        </form>
    </div>
</div>