<% if (success && success.length){%>
    <div class="alert-dismissible fade show mt-3 alert alert-success col-6 offset-3">
        <%=success %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<% if (error && error.length){%>
    <div class="alert-dismissible fade show mt-3 alert alert-danger col-6 offset-3">
        <%=error %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>